@model  Link

@{
    ViewData["Title"] = "AddLinks";
}

<h1>AddLinks</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Register">
            <div>
                <label>Select Roles</label>
                @Html.DropDownListFor(x=> x.Roles.Id, Model.selectLists,"Select", new { @class = "form-control" })
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LinkName" class="control-label"></label>
                <input asp-for="LinkName" class="form-control" />
                <span asp-validation-for="LinkName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create Link" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

